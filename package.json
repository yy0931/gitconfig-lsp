{
  "name": "gitconfig-lsp",
  "displayName": "git-config Language Server",
  "version": "0.5.0",
  "publisher": "yy0931",
  "description": "",
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yy0931/gitconfig-lsp"
  },
  "bugs": {
    "url": "https://github.com/yy0931/gitconfig-lsp/issues"
  },
  "scripts": {
    "build": "esbuild --sourcemap=external --target=esnext --platform=node --format=cjs --outdir=dist src/*.ts",
    "generate-docs": "npm run build && node dist/generate-docs.js",
    "prepare": "npm run generate-docs",
    "vscode:prepublish": "npm run generate-docs",
    "test": "npm run build && mocha dist/*.test.js"
  },
  "activationEvents": [
    "onLanguage:gitconfig",
    "onLanguage:properties"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "preview": true,
  "contributes": {
    "languages": [
      {
        "id": "gitconfig",
        "extensions": [
          ".gitconfig",
          ".lfsconfig"
        ],
        "filenamePatterns": [
          ".gitconfig",
          ".lfsconfig",
          "config.worktree"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "gitconfigBool": [
            "constant.language.boolean.gitconfig"
          ],
          "gitconfigColor": [
            "support.constant.color.gitconfig"
          ],
          "gitconfigProperty": [
            "variable.other.constant.object.gitconfig",
            "variable.other.constant",
            "variable.other.enummember"
          ],
          "gitconfigSection": [
            "entity.name.tag.gitconfig",
            "meta.selector.gitconfig"
          ]
        }
      }
    ]
  },
  "keywords": [
    "git",
    "gitconfig",
    "lfsconfig",
    ".gitconfig",
    ".lfsconfig"
  ],
  "author": "",
  "license": "GPLv2",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/glob": "^7.2.0",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@types/node-fetch": "^2.5.12",
    "@types/turndown": "^5.0.1",
    "@types/vscode": "^1.60.0",
    "chai": "^4.3.4",
    "esbuild": "^0.14.11",
    "jsdom": "^19.0.0",
    "mocha": "^9.1.4",
    "node-fetch": "^2.6.6",
    "turndown": "^7.1.1"
  },
  "dependencies": {
    "glob": "^7.2.0",
    "peggy": "^1.2.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.3",
    "vscode-uri": "^3.0.3"
  }
}
